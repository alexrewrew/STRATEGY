@import "../../utilities/vars"
@import "../../utilities/mixins"

button
  border none
  cursor pointer
  transitions()
  &:focus
    outline none

.button
  display block
  max-width 290px
  width 100%
  text-align center

  background $black
  color $white

  padding-top 11px
  padding-bottom 12px

  margin-bottom 1rem

  transitions()
  &:hover
    color $black
    background $gray

.button-big
  text-align left
  max-width 458px
  font-size: $s26
  font-weight: 600
  letter-spacing: 1.3px;
  padding-top 18px
  padding-bottom 21px
  padding-left 39px
  box-shadow: 0px 10px 30px 10px rgba(127,104,0,0.45);
  margin 21px 0
  svg
    position relative
    margin-left: 15px;
    top: 2px;
  &:hover
    box-shadow: 0px 0px 30px 10px rgba(127,104,0,0.45);
